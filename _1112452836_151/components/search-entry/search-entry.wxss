.searchEntry {
    display: flex;
    flex: 1;
    border: none;
    border-radius: 100rpx;
    background-color: #f4f4f4;
    position: relative;
    height: 70rpx;
    margin-bottom: 4rpx;
    color: #111111;
    font-size: 28rpx;
    text-align: left;
    align-items: center;
    justify-content: center;
}

.keyword-entry {
    justify-content: flex-start;
}

.searchIcon {
    background-image: url('data:image/png;base64,');
    background-size: contain;
    background-repeat: no-repeat;
    margin-left: 20rpx;
    margin-right: 10rpx;
    padding-right: 10rpx;
    width: 35rpx;
    height: 35rpx;
}

.searchKeyword {
    display: block;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    max-width: 700rpx;
}