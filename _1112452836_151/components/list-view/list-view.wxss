.list-view-first-load {
    text-align: center;
    font-size: 28rpx;
    padding: 30rpx 0;
    background-color: transparent;
}

.first-load-icon {
    display: inline-block;
    width: 60rpx;
    height: 60rpx;
    margin: 20rpx 0;
    background-repeat: no-repeat;
    background-size: contain;
    transform-origin: center center;
    animation-name: loading;
    animation-duration: 1.2s;
    animation-timing-function: linear;
    animation-iteration-count: infinite;
    background-image: url(data:image/png;base64,);
}

.list-view-load-end {
    display: block;
    text-align: center;
    font-size: 26rpx;
    color: #999999;
    line-height: 90rpx;
}

.list-view-loading {
    text-align: center;
    font-size: 28rpx;
    height: 44rpx;
    line-height: 44rpx;
    padding: 20rpx 0;
    background-color: transparent;
}

.list-view-loading-icon {
    vertical-align: middle;
    margin-right: 20rpx;
    width: 44rpx;
    height: 44rpx;
    display: inline-block;
    background-image: url(data:image/png;base64,);
    background-repeat: no-repeat;
    background-size: cover;
    transform-origin: center center;
    animation-name: loading;
    animation-duration: 1.2s;
    animation-timing-function: linear;
    animation-iteration-count: infinite;
}

.list-view-loading-title {
    display: inline-block;
    min-width: 6em;
    height: 44rpx;
    vertical-align: middle;
}

@keyframes loading {
    0% {
        -webkit-transform: rotate(0);
    }

    50% {
        -webkit-transform: rotate(180deg);
    }

    to {
        -webkit-transform: rotate(1turn);
    }
}

@-webkit-keyframes loading {
    0% {
        -webkit-transform: rotate(0);
    }

    50% {
        -webkit-transform: rotate(180deg);
    }

    to {
        -webkit-transform: rotate(1turn);
    }
}

.border-bottom {
    position: relative;
}

.border-bottom:before {
    content: '';
    border: solid #e1e1e1;
    border-width: 0 0 1px 0;
    border-radius: 0;
    transform: scale(0.5);
    transform-origin: 0 0;
    width: 200%;
    height: 200%;
    position: absolute;
    left: 0;
    top: 0;
    box-sizing: border-box;
    pointer-events: none;
}