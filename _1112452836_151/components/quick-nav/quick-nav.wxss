.quickNav {
    position: fixed;
    bottom: 220rpx;
    right: 30rpx;
    font-weight: 500;
    z-index: 1001;
    border: solid 1rpx #e1e1e1;
    border-radius: 50rpx;
    background: #fff;
    box-shadow: 0px 2px 8px 0px #e1e1e1;
}

.quickNavList {
    margin-top: 34rpx;
    display: flex;
    flex-direction: column-reverse;
    width: 96rpx;
    transition: all 0.4s;
    position: relative;
    z-index: 10;
    overflow: hidden;
}

.quick-img {
    width: 40rpx;
    height: 40rpx;
    margin-left: 28rpx;
}

.quick-item {
    display: flex;
    flex-direction: column;
    font-size: 22rpx;
    padding: 0;
    color: #111;
    text-align: center;
    margin-bottom: 30rpx;
    height: 70rpx;
}

.quickListHide {
    height: 0rpx!important;
    margin-top: 0rpx;
    border-radius: 50%;
}

.quickListHide .quick-item {
    height: 0rpx;
    margin-bottom: 0rpx;
    border-radius: 50%;
}

.launch-app {
    background: #fff;
    padding: 0;
    line-height: initial;
}

.quickCon {
    width: 96rpx;
    height: 96rpx;
    border-radius: 50%;
    color: #111;
    font-size: 24rpx;
    text-align: center;
    background: #fff;
    padding: inherit;
    line-height: inherit;
    display: flex;
    justify-content: center;
    align-items: center;
}

.quick {
    transition: all 0.3s;
}

.cover-txt {
    display: flex;
    height: 100%;
    width: 100%;
    vertical-align: middle;
    justify-content: center;
    align-items: center;
    padding: 20rpx;
    transition: opacity 1s;
    opacity: 1;
}

.show-txt {
    background-image: url('data:image/png;base64,');
    background-size: 32rpx;
    background-repeat: no-repeat;
    background-position: 12rpx 30rpx;
    margin-left: 20rpx;
    border-top: solid 1rpx #f1f1f1;
    margin-bottom: 10rpx;
    font-size: 0;
    padding: 0;
    margin-right: 20rpx;
    width: 100%;
    height: 80rpx;
}

.quickSingle .cover-txt {
    padding: 0;
}

.cover-hide {
    opacity: 0;
    width: 0;
    height: 0;
}

.open-txt {
    flex-direction: column;
}

.quickCover {
    width: 96rpx;
    height: 96rpx;
    color: #111;
    font-size: 22rpx;
    text-align: center;
    z-index: 30;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    transition: all 0.2s;
}

.quickShow {
    border-radius: 50rpx;
    height: 80rpx;
}

.quick-noshow {
    border-radius: 50%;
}

.launch-app::after {
    border: 0;
}

.shopBottom {
    bottom: 270rpx;
}

.big-img {
    width: 70rpx;
    height: 70rpx;
    margin-left: 14rpx;
}