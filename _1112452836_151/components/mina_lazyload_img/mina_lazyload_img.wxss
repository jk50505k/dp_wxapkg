.showDefaultStart {
    opacity: 1;
    transition: opacity 1s;
}

.showDefaultEnd {
    opacity: 0;
}

.showImgStart {
    opacity: 0;
    position: relative;
    z-index: 0;
    transition: opacity 1s;
}

.showImgEnd {
    opacity: 1;
}

.defaultImg {
    position: absolute;
    left: 0;
    top: 0;
}

.lazyload-base {
    position: relative;
    display: inline-block;
}