.shelf-header-wrapper {
    height: 88rpx;
    display: flex;
    align-items: center;
}

.header-left {
    display: flex;
    align-items: center;
    padding-left: 20rpx;
}

.header-title-icon {
    display: inline-block;
    width: 40rpx;
    height: 40rpx;
}

.header-title {
    display: inline-block;
    color: #111111;
    font-family: PingFangSC-Medium;
    font-size: 36rpx;
    padding-left: 34rpx;
}

.header-right {
    flex: 1;
    text-align: right;
    padding-right: 40rpx;
}

.shelf-tag-item {
    display: inline-block;
    padding-left: 20rpx;
}

.shelf-tag-item:first-child {
    padding-left: 0;
}

.item-icon {
    display: inline-block;
    width: 20rpx;
    height: 20rpx;
}

.item-desc {
    display: inline-block;
    color: #cccccc;
    font-family: PingFangSC-Regular;
    font-size: 22rpx;
}