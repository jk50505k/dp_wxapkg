.shelf-content-wrapper {
    margin: auto 26rpx;
}

.shelf-product-item-wrapper {
    width: 320rpx;
    border: 2rpx solid #e1e1e1;
    border-radius: 20rpx;
    box-sizing: border-box;
    display: inline-block;
    margin: 2%;
    vertical-align: middle;
}

.product-item-pic-wrapper {
    position: relative;
}

.pic-latestSaleDesc {
    position: absolute;
    bottom: 0;
    width: 240rpx;
    height: 30rpx;
    background-image: linear-gradient(270deg,rgba(0,0,0,0.00) 1%,rgba(0,0,0,0.60) 26%,rgba(0,0,0,0.60) 99%);
}

.icon-time {
    background-repeat: no-repeat;
    background-position: center center;
    background-size: contain;
    width: 18rpx;
    height: 18rpx;
    position: absolute;
    left: 16rpx;
    top: 50%;
    margin-top: -9rpx;
}

.content {
    position: absolute;
    font-size: 20rpx;
    color: #ffffff;
    left: 42rpx;
    top: 4rpx;
    font-family: PingFangSC-Regular;
}

.product-item-pic {
    background: center center no-repeat;
    border-radius: 20rpx;
    border-bottom-left-radius: 0;
    border-bottom-right-radius: 0;
}

.product-item-pic-picDesc {
    position: absolute;
    top: 0;
    height: 32rpx;
    line-height: 32rpx;
    padding-left: 16rpx;
    padding-right: 16rpx;
    border-radius: 20rpx;
    border-bottom-left-radius: 0;
    border-top-right-radius: 0;
}

.product-item-content {
    padding: 24rpx 30rpx 24rpx 24rpx;
    height: 128rpx;
}

.product-item-content.displayFour {
    height: 168rpx;
}

.product-item-content.displayTwo {
    height: 84rpx;
}

.product-item-content.displayFive {
    height: 216rpx;
}

.product-item-title-wrapper {
    font-family: PingFangSC-Medium;
    font-size: 30rpx;
    color: #222222;
    letter-spacing: 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.product-item-subtitle-wrapper {
    display: flex;
    align-items: center;
    flex-flow: wrap;
    overflow: hidden;
    font-size: 24rpx;
    height: 36rpx;
    margin-top: 4rpx;
    font-family: PingFangSC-Regular;
    color: #777777;
}

.product-item-subtitle {
    display: flex;
    font-size: 24rpx;
    height: 36rpx;
}

.subtitle-tag {
    display: inline-block;
    flex: 1;
    border: 2rpx solid;
    padding: 0rpx 8rpx;
    font-size: 20rpx;
    border-radius: 4rpx;
    margin-left: 8rpx;
    height: 26rpx;
    line-height: 26rpx;
}

.product-item-tag-wrapper {
    height: 34rpx;
}

.product-item-tag {
    display: inline-block;
    border-left: 2rpx solid #E5E5E5;
    padding-left: 4rpx;
    font-family: PingFangSC-Regular;
    height: 30rpx;
    font-size: 26rpx;
    color: #777777;
}

.product-item-tag:first-child {
    border-left: none;
    padding-right: 4rpx;
}

.product-item-subtitle-wrapper.dp .product-item-tag.highlight {
    color: #ff6633;
}

.product-item-subtitle-wrapper.dp .subtitle-tag {
    color: #ff6633;
    border-color: rgba(255,102,51,0.60);
}

.product-item-subtitle-wrapper.mt .product-item-tag.highlight {
    color: #00BBBC;
}

.product-item-subtitle-wrapper.mt .subtitle-tag {
    color: #00BBBC;
    border-color: #00BBBC;
}

.product-item-price-wrapper {
    display: flex;
    align-items: center;
    flex-flow: wrap;
    margin-top: 10rpx;
    height: 30rpx;
    line-height: 30rpx;
    overflow: hidden;
}

.product-item-salePrice {
    display: inline-block;
    font-size: 32rpx;
    font-family: PingFangSC-Regular;
    font-weight: 700;
    line-height: 30rpx;
}

.product-item-salePrice-span {
    display: inline-block;
    padding-left: 5rpx;
}

.product-item-marketPrice {
    display: inline-block;
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #777777;
    margin-left: 10rpx;
    margin-top: 4rpx;
}

.product-item-marketPrice-span {
    display: inline-block;
    text-decoration: line-through;
}

.product-item-price-tag {
    display: inline-block;
    font-family: PingFangSC-Regular;
    font-size: 22rpx;
    line-height: 24rpx;
    height: 22rpx;
    border: 2rpx solid;
    padding: 2rpx 8rpx;
    border-radius: 4rpx;
    margin-left: 8rpx;
}

.product-item-price-wrapper.dp .product-item-salePrice,.product-item-price-tag {
    color: #ff6633;
    border-color: rgba(255,102,51,0.60);
}

.product-item-price-wrapper.mt .product-item-salePrice,.product-item-price-tag {
    color: #00BBBC;
    border-color: #00BBBC;
}

.product-item-assist-inform-wrapper {
    margin-top: 16rpx;
}

.product-item-saleDesc {
    font-size: 24rpx;
    color: #777777;
    font-family: PingFangSC-Regular;
}