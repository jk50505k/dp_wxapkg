.page-promotion {
    z-index: 999;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0,0,0,0.7);
}

.promotion-panel {
    position: fixed;
    height: 690rpx;
    width: 520rpx;
    z-index: 1000;
    top: 50%;
    left: 50%;
    margin-left: -260rpx;
    margin-top: -345rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.promotion-close-bnt {
    display: inline-block;
    width: 46rpx;
    height: 46rpx;
    vertical-align: middle;
    background: url('data:image/png;base64,') no-repeat;
    background-size: cover;
}

.close-bnt {
    position: absolute;
    bottom: -80rpx;
}

.promotion-img {
    display: block;
    height: 690rpx;
    width: 520rpx;
}