.login-wrapper {
    position: relative;
    width: 566rpx;
    margin: 0 auto;
    height: 1000rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-end;
    margin-bottom: 12rpx;
}

.login-wrapper {
    width: 560rpx;
}

.login-img {
    width: 560rpx;
    height: 730rpx;
}

