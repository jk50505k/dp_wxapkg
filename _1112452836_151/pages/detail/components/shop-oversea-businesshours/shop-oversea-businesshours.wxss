    margin-bottom: 20rpx;
}

.detail-time-containner .month-containner {
    width: 200%;
    display: flex;
    flex-direction: row;
    margin-bottom: 16rpx;
}

.detail-time-containner .month-containner .dayText {
    font-size: 28rpx;
    line-height: 44rpx;
    min-width: 168rpx;
    margin-left: 30rpx;
}

.detail-time-containner .month-containner .hourText,.detail-time-containner .month-containner .mealText {
    font-size: 28rpx;
    line-height: 44rpx;
    margin-left: 30rpx;
