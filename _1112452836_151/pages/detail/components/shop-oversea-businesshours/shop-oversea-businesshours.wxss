@import "../../../../__wuBaseWxss__/1.wxss";

.module-info {
    background-color: #fff;
    padding: 0 30rpx;
}

.module-info .top-separator-line {
    position: relative;
}

.module-info .top-separator-line:before {
    content: '';
    border: solid #e1e1e1;
    border-width: 1px 0 0 0;
    border-radius: 0;
    transform: scale(0.5);
    transform-origin: 0 0;
    width: 200%;
    height: 200%;
    position: absolute;
    left: 0;
    top: 0;
    box-sizing: border-box;
    pointer-events: none;
}

.module-info .businesshours {
    height: 110rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.module-info .businesshours .businesshours-info {
    display: flex;
    align-items: center;
}

.module-info .businesshours .businesshours-info .businesshours-icon {
    width: 32rpx;
    height: 32rpx;
    background-image: url('http://www.dpfile.com/sc/eleconfig/shopiconimgconfig/20171213141113icon_businessTime3x.png');
    background-size: 32rpx 32rpx;
    background-repeat: no-repeat;
}

.module-info .businesshours .businesshours-info .businesshours-title {
    font-size: 32rpx;
    color: #111;
    margin-left: 12rpx;
    max-width: 610rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.module-info .show-right-arrow {
    justify-content: space-between;
}

.module-info .hidden-right-arrow {
    justify-content: flex-start;
}

.popMask {
    width: 100%;
    height: 100%;
    background: #000000;
    opacity: 0.7;
    position: fixed;
    top: 0rpx;
    left: 0rpx;
    z-index: 101;
}

.popContent {
    width: 100%;
    background: #fff;
    position: fixed;
    bottom: 0rpx;
    left: 0rpx;
    height: 934rpx;
    z-index: 102;
}

.iphoneX {
    height: 1002rpx;
    padding-bottom: 68rpx;
}

