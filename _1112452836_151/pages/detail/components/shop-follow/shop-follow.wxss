@import "../../../../__wuBaseWxss__/1.wxss";

.shop-follow-container {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    background-color: #FFFFFF;
    padding: 0 30rpx;
}

.mutiType {
    background: none;
}

.mutiType .follow-bottom {
    margin: 20rpx 0 0 0;
}

.mutiType .user-name {
    font-size: 30rpx;
    color: #466889;
    max-width: 240rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin: 0 10rpx;
}

.mutiType .coupon-text {
    font-size: 26rpx;
    opacity: 0.4;
    color: #000000;
}

.mutiType .follow {
    border: 1rpx solid #ccc;
}

.mutiType .coupon-icon {
    height: 26rpx;
    width: 26rpx;
    align-items: center;
    background: url('data:image/png;base64,');
    background-size: contain;
    background-repeat: no-repeat;
    margin-left: 4rpx;
}

.follow-top {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 30rpx;
}

.follow-top .follow-title {
    font-family: PingFangSC-Regular;
    font-size: 26rpx;
    color: #777777;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.follow-top .follow-close {
    width: 20rpx;
    height: 20rpx;
    align-self: center;
    background: url('data:image/png;base64,');
    background-size: contain;
    background-repeat: no-repeat;
}

.follow-bottom {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin: 20rpx 0 22rpx 0;
}

.follow-bottom .follow-bottom-left {
    display: flex;
    align-items: center;
}

.follow-bottom .btm-left-image {
    height: 60rpx;
    width: 60rpx;
    border-radius: 50%;
    position: relative;
}

.follow-bottom .btm-left-image:before {
    content: '';
    border: solid #E1E1E1;
    border-width: 1px 1px 1px 1px;
    border-radius: 50%;
    transform: scale(0.5);
    transform-origin: 0 0;
    width: 200%;
    height: 200%;
    position: absolute;
    left: 0;
    top: 0;
    box-sizing: border-box;
    pointer-events: none;
}

.follow-bottom .btm-vip-image {
    position: absolute;
    height: 18rpx;
    width: 18rpx;
    left: 74rpx;
    bottom: 20rpx;
}

.follow-bottom .btm-user-name {
    font-family: PingFangSC-Regular;
    font-size: 30rpx;
    color: #466889;
    height: 32rpx;
    line-height: 32rpx;
    max-width: 304rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin: 0 10rpx;
}

.follow-bottom .btm-level-image {
    width: 54rpx;
    height: 28rpx;
    border-radius: 100rpx;
}

.follow-bottom .follow-bottom-right {
    width: 122rpx;
    height: 50rpx;
}

.follow-bottom .follow {
    display: flex;
    justify-content: center;
    align-items: center;
    background: #F4F4F4;
    border-radius: 100rpx;
    padding: 8rpx 0;
}

.follow-bottom .follow-text {
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #BBBBBB;
    text-align: left;
}

.follow-bottom .unfollow {
    display: flex;
    justify-content: center;
    align-items: center;
    background: #FF6633;
    border-radius: 100rpx;
    padding: 8rpx 0;
}

.follow-bottom .unfollow-image {
    height: 20rpx;
    width: 20rpx;
    align-items: center;
    background: url('data:image/png;base64,');
    background-size: contain;
    background-repeat: no-repeat;
    margin-right: 8rpx;
}

.follow-bottom .unfollow-text {
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #FFFFFF;
    text-align: left;
}

.border-top {
    position: relative;
}

.border-top:before {
    content: '';
    border: solid #e1e1e1;
    border-width: 1px 0 0 0;
    border-radius: 0;
    transform: scale(0.5);
    transform-origin: 0 0;
    width: 200%;
    height: 200%;
    position: absolute;
    left: 0;
    top: 0;
    box-sizing: border-box;
    pointer-events: none;
}

