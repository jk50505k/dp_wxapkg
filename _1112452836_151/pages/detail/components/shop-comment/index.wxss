.shop-comment-container {
    position: relative;
    position: fixed;
    bottom: 0;
    left: 0;
    display: flex;
    width: 100%;
    background: #fcfcfc;
    align-items: center;
    justify-content: center;
    padding: 0 30rpx;
    box-sizing: border-box;
    z-index: 10;
    min-height: 108rpx;
}

.shop-comment-container:before {
    content: '';
    border: solid #E1E1E1;
    border-width: 1px 0 0 0;
    border-radius: 0;
    transform: scale(0.5);
    transform-origin: 0 0;
    width: 200%;
    height: 200%;
    position: absolute;
    left: 0;
    top: 0;
    box-sizing: border-box;
    pointer-events: none;
}

