.group {
    position: relative;
    height: 100%;
    background: linear-gradient(-180deg,#FFFFFF 0%,#FFFFFF 11%,#F6F6F6 53%,#F6F6F6 100%);
}

.error {
    background: #ffffff;
}

.load {
    text-align: center;
    font-size: 28rpx;
    padding: 30rpx 0;
    background-color: transparent;
}

.load-icon {
    display: inline-block;
    width: 60rpx;
    height: 60rpx;
    margin: 20rpx 0;
    background-repeat: no-repeat;
    background-size: contain;
    transform-origin: center center;
    animation-name: loading;
    animation-duration: 1.2s;
    animation-timing-function: linear;
    animation-iteration-count: infinite;
    background-image: url(data:image/png;base64,);
}

.load-title {
    display: inline-block;
    min-width: 6em;
    height: 44rpx;
    vertical-align: middle;
}

.empty {
    text-align: center;
    height: 144rpx;
    padding: 50rpx 0 80rpx;
    overflow: hidden;
}

.empty-text {
    font-size: 30rpx;
    color: #777777;
    line-height: 42rpx;
}

.empty-btn {
    margin: 28rpx auto 0;
    width: 250rpx;
    height: 70rpx;
    border: 2rpx solid #FF6633;
    border-radius: 36rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.empty-btn-text {
    font-size: 30rpx;
    color: #FF6633;
}