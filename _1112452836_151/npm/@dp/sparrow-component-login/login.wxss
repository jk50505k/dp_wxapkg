.login-component {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 100000;
    background-color: #f0f0f0;
}

.auth-title {
    display: block;
    text-align: center;
    font-size: 34rpx;
    margin-bottom: 10rpx;
    color: #111;
}

.auth-subtitle {
    padding: 0 15rpx;
    font-size: 24rpx;
    margin: 0 30rpx 15rpx 30rpx;
    color: #bbb;
}

.auth {
    position: fixed;
    width: 300rpx;
    margin: 0 auto;
    margin-top: 300rpx;
}

.auth-actions {
    display: flex;
    padding: 0 30rpx;
}

.btn-userinfo {
    display: block;
    flex: 1;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    background-color: rgb(26,173,25);
    color: #fff;
    font-size: 30rpx;
    box-sizing: border-box;
}

.btn-userinfo+.btn-userinfo {
    margin-left: 30rpx;
}

.userinfo-cancel {
    color: #999;
    background-color: #fff;
}

.bg {
    width: 100%;
    height: 300rpx;
}

.btn-mobile {
    display: block;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    margin: 0 44rpx;
    background-color: rgb(26,173,25);
    color: #fff;
    font-size: 34rpx;
}

.btn-mobile:before {
    content: '';
    display: inline-block;
    margin: 0 5rpx 8rpx 0;
    width: 60rpx;
    height: 60rpx;
    vertical-align: middle;
    background: url(data:image/png;base64,) center center no-repeat;
    background-size: contain;
}

.btn-login {
    margin-top: 30rpx;
    font-size: 28rpx;
    text-align: center;
    color: rgb(87,107,149);
}

.loginMobile {
    margin-top: 32rpx;
    background-color: #fff;
    min-height: 90rpx;
    padding-left: 30rpx;
    font-size: 28rpx;
}

.loginRow {
    display: flex;
    height: 90rpx;
    line-height: 90rpx;
    align-items: center;
    border-color: #dfdfdf;
    border-width: 0 0 1rpx 0;
    border-style: solid;
}

.loginRow:last-child {
    border-width: 0;
}

.inputLabel {
    margin-right: 20rpx;
}

.loginInput {
    flex: 1;
    overflow: hidden;
    height: 48rpx;
    line-height: 48rpx;
    padding: 20rpx 0;
    font-size: 30rpx;
    color: #111;
}

.inputPlaceholder {
    color: #999;
    font-size: 26rpx;
}

.btnSending {
    margin-right: 20rpx;
    padding: 0 20rpx;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 28rpx;
    color: #fff;
    background-color: #ccc;
    border: 1rpx solid #ccc;
    border-radius: 6rpx;
}

.btnSend {
    margin-right: 20rpx;
    padding: 0 20rpx;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 28rpx;
    border: 1rpx solid #bbb;
    border-radius: 6rpx;
}

.btnLogin {
    margin: 30rpx;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 28rpx;
    text-align: center;
    background-color: #f63;
    color: #fff;
    border-radius: 8rpx;
}

.loginImageCode {
    z-index: 5;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0,0,0,0.4);
}

.imageCodeWrap {
    position: fixed;
    top: 50%;
    margin-top: -220rpx;
    left: 5%;
    width: 90%;
    padding: 0 40rpx 50rpx;
    box-sizing: border-box;
    background-color: #fff;
    border-radius: 20rpx;
}

.codeTitle {
    line-height: 110rpx;
    color: #111;
    font-size: 40rpx;
    text-align: center;
    border-width: 0 0 1rpx 0;
    border-color: #e1e1e1;
    border-style: dashed;
}

.codeMain {
    margin: 50rpx 0 30rpx;
    display: flex;
    align-items: center;
}

.codeInput {
    flex: 1;
    overflow: hidden;
    text-align: center;
    color: #111;
    font-size: 40rpx;
    height: 102rpx;
    margin-right: 20rpx;
    border: 1rpx solid #dfdfdf;
}

.codeImage {
    width: 260rpx;
    height: 106rpx;
}

.imageCodeMsg {
    line-height: 50rpx;
    font-size: 20rpx;
    color: red;
}

.btnImageCode {
    background-color: #f63;
    line-height: 90rpx;
    color: #fff;
    text-align: center;
    border-radius: 10rpx;
    font-size: 36rpx;
}